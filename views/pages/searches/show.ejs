<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" integrity="sha256-h20CPZ0QyXlBuAw7A+KluUYx/3pK+c7lYEpqLTlxjYQ=" crossorigin="anonymous" />
    <title>Open Shelf - Book App</title>
    <link rel="stylesheet" href="/styles/base.css">
</head>

<body>
    <header class="bg-black">
        <nav id="menu">
            <a href="/" class="atHover">Home</a>
            <a href="/searches/new" class="atHover">Search the Google Boooks API</a>
        </nav>
        <i class="fas fa-bars atHover" id="barsIcon"></i>
    </header>
    <main id="showMain">
        <% data.forEach(val => { %>
        <div class="container">
            <img src="<%= val.image_url %>">
            <h3><%= val.title%></h3>
            <h4><%= val.author %></h4>
            <p><%= val.description%></p>
            <button class="open-button   hide_btn"> Select This Book</button>

            <form action="/books" method="POST" id="book-form" class="form-container">
                <input type="text" name="image_url" value="<%= val.image_url %>" style="display: none;">
                <input type="text" name="title" value="<%= val.title%>" />
                <input type="text" name="author" value="<%= val.author%>" />
                <input type="text" name="isbn" value="<%= val.isbn%>" />
                <input type="text" name="description" value="<%= val.description%>" />
                <input type="text" name="bookShelf" placeholder="Enter the shelf name !" required />
                <button type="submit">Add to Database </button>
            </form>
        </div>
        <% }) %>
    </main>
    <script src="https://code.jquery.com/jquery-3.4.1.js"
        integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>
    <script src="../js/app.js"></script>
    <script>
        function myFunction() {
            var x = document.getElementById("myLinks");
            if (x.style.display === "block") {
                x.style.display = "none";
            } else {
                x.style.display = "block";
            }
        }
    </script>
    <script src="https://code.jquery.com/jquery-3.5.0.js"></script>
    <script>
        $('#menu').hide();
        $('#barsIcon').on('click', showMenu => {
            $('#menu').toggle();
        })
    </script>
    <footer class="bg-black"></footer>
</body>

</html>